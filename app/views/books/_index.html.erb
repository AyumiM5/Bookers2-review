  <h2>Books</h2>
  <table class="table">
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </thead>
    <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :image_id, size: "40x40", fallback: "no_image.jpg" %></td>
        <td><%= link_to "#{book.title}", book_path(book.id) %></td>
        <td><%= book.opinion %></td>
        <td>コメント数:<%= book.book_comments.count %></td>
      </tr>
    <% end %>
    </tbody>
  </table>