<div class="container my-2">
  <div class="row">
    <div class="mx-auto col-md-8 col-lg-5 col-sm-12 px-sm-0">
      <h2>Editing Book</h2>
  
      <%= form_with model: @book, local: true do |f| %>
      <div class="field my-2">
        <%= f.label :Title %><br />
        <%= f.text_field :title, autofocus: true, autocomplete: "title", class:"form" %>
      </div>
     
      <div class="field my-2">
        <%= f.label :Opinion %><br />
        <%= f.text_area :opinion, class:"form" %>
      </div>
    
      <div class="actions my-2">
        <%= f.submit "Update Book", class:"btn btn-success"%>
      </div>
      <% end %>
      
      <div>
        <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>