<h2 class="mt-2">New book</h2>
<div>
  <%= form_with model:book, local: true do |f| %>
    <div class="my-2">
      <%= f.label :Title %></br>
      <%= f.text_field :title, class:"form" %>
    </div>
    <div class="my-2">
      <%= f.label :Opinion %></br>
      <%= f.text_area :opinion, class:"form" %>
    </div>
    <div class="my-2">
      <%= f.submit "Create Book", class:"btn btn-success" %>
    </div>
  <% end %>
</div>