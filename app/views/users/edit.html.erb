<div class="container my-2">
  <div class="row">
    <div class="mx-auto col-md-8 col-lg-5 col-sm-12 px-sm-0">
      <h2>User info</h2>
  
      <%= form_with model: @user, local: true do |f| %>
      <div class="field my-2">
        <%= f.label :Name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form" %>
      </div>
      
      <div class="field my-2">
        <%= f.label :Image %><br />
        <%= f.attachment_field :image %>
      </div>
     
      <div class="field my-2">
        <%= f.label :Introduction %><br />
        <%= f.text_area :introduction, class:"form" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Update User", class:"btn btn-secondary"%>
      </div>
      <% end %>
    </div>
  </div>
</div>