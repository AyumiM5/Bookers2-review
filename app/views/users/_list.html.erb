
<table class="table">
  <thead>
    <th>image</th>
    <th>name</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :image_id, size: "40x40", fallback: "no_image.jpg" %></td>
      <td><%= user.name %></td>
      <td>フォロー数：<%= user.followings.count %></td>
      <td>フォロワー数：<%= user.followers.count %></td>
      <% if current_user.followings?(user) %>
        <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
        <% else %>
        <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
      <% end %>
      <td><%= link_to "show", user_path(user) %></td>
    </tr>
    <% end %>
  </tbody>
</table>